{% extends 'layout.twig' %}

{% block content %}

    <h1>Добро Пожаловать в Link-Walker!</h1>

        <div class="col s12 m6 card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Link Walker</span>
                <p>Пожалуйста, введите в поле ниже адрес ресурса для сканирования.</p>
            </div>
            <div class="card-action">
                <form class="col s12" id="crawly">
                    <div class="input-field col s6">
                        <input id="link" type="text" class="validate">
                        <label for="link">Url</label>
                    </div>
                    <div class="row">
                        <div class="col s4 offset-s5">
                            <a href="" id="begin-to-crawl" class="btn waves-effect waves-teal">walk</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    <table id="links" class="centered" style="display: none">
        <thead>
        <tr>
            <th data-field="id">№</th>
            <th data-field="link">LINK</th>
            <th data-field="status">STATUS</th>
        </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
    <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
        <a href="#modal-settings" class="modal-trigger btn-floating btn-large orange">
            <i class="large material-icons">settings</i>
        </a>
    </div>
    <!-- Modal Structure -->
    <div id="modal-settings" class="modal bottom-sheet">
        <div class="modal-content">
            <h4>Настройки</h4>
            <div class="row">
                <form id="crawler-settings" class="col s12">
                    <div class="input-field col s6">
                        <input placeholder="Узел" id="node" type="text" class="validate">
                        <label for="node">Узел</label>
                    </div>
                    <div class="input-field col s6">
                        <input placeholder="Глубина" id="depth" type="text" class="validate">
                        <label for="depth">Глубина</label>
                    </div>
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#!" class=" modal-action modal-close waves-effect waves-orange btn-flat">Настроено</a>
        </div>
    </div>
{% endblock %}
